<?xml version="1.0" encoding="UTF-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.App" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/app_yellow</item>
        <item name="colorPrimaryVariant">#FAD223</item>
        <item name="colorPrimaryDark">#DCBE0F</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorSurface">#F1F0F2</item>
        <item name="colorOnPrimary">#DCDCDC</item>
        <item name="android:textColor">@color/black</item>

        <item name="colorSecondary">#DCBE0F</item>
        <item name="colorSecondaryVariant">#DCBE0F</item>

        <item name="android:colorControlNormal">@color/colorControlNormal</item>
        <item name="android:colorControlActivated">@color/colorControlActivated</item>
        <item name="android:fontFamily">@font/app_font</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen.IconBackground">
        <item name="postSplashScreenTheme">@style/Theme.App</item>
    </style>

    <style name="Style.Dwaa.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/outlined_text_input_stroke_color</item>
        <item name="boxStrokeColor">@color/outlined_text_input_stroke_color</item>
    </style>

    <style name="Style.App.TextView.Title" parent="Theme.App">
        <item name="android:layout_marginHorizontal">23dp</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/title_color</item>
        <item name="android:fontFamily">@font/pt_sans_bold</item>
    </style>

    <style name="Style.App.TextView.Placeholder" parent="Theme.App">
        <item name="android:layout_marginHorizontal">23dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/placeholder_color</item>
        <item name="android:fontFamily">@font/pt_sans_regular</item>
    </style>

    <style name="Style.App.Button.Filled" parent="Theme.App">
        <item name="cornerRadius">@dimen/corner_radius_default</item>
        <item name="elevation">@dimen/filled_button_elevation</item>
        <item name="android:textColor">@color/filled_button_text_color</item>
        <item name="backgroundTint">@color/filled_button_background</item>
    </style>

    <style name="Style.App.TextInputLayout.OutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginHorizontal">23dp</item>

        <item name="strokeColor">@color/outlined_text_input_stroke_color</item>

        <!--box stroke-->
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeColor">@color/outlined_text_input_stroke_color</item>

        <!--box background-->
        <item name="boxBackgroundColor">@color/outlined_text_input_layout_background_color</item>

        <!--box corner-->
        <item name="boxCornerRadiusBottomEnd">@dimen/outlined_corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/outlined_corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/outlined_corner_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/outlined_corner_radius</item>
    </style>

    <style name="Theme.App.Fragment" parent="Theme.App">
        <item name="android:background">@color/fragment_background</item>
    </style>

    <style name="Theme.App.Activity" parent="Theme.App">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:background">@color/fragment_background</item>
    </style>

    <style name="Splash" parent="Theme.App">
        <item name="colorPrimaryDark">@color/white</item>
    </style>

    <style name="Home" parent="Theme.App">
        <item name="android:textColor">@color/black</item>
        <item name="colorPrimaryDark">@color/app_blue</item>
    </style>

    <style name="App_OutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="startIconTint">@color/app_yellow</item>
        <item name="startIconTintMode">multiply</item>
    </style>

    <style name="Dwaa_TextField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lines">1</item>
        <item name="android:layout_margin">@dimen/_10sdp</item>
        <item name="android:imeActionId">@integer/btm_to</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="autoscroll">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:scrollHorizontally">true</item>
    </style>
</resources>